<% if !user_signed_in? %>
 <%= tweet.favorites.length %>
<% elsif current_user.favorited_by?(tweet.id) %>
 <%= link_to tweet_favorites_path(tweet, tweet.favorites), method: :delete, remote: true do %>
  ♥
 <% end %>
 <%= tweet.favorites.length %>
<% else %>
 <%= link_to tweet_favorites_path(tweet), method: :post, remote: true do %>
  ♡
 <% end %>
 <%= tweet.favorites.length %>
<% end %>